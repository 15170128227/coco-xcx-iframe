.oc-title {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
}
.oc-goods {
  display: flex;
  padding: 24rpx;
  font-size: 24rpx;
  background-color: #fcfcfc;
}
.oc-goods .ocg-mainpic {
  width: 164rpx;
  height: 164rpx;
  background-color: #fff;
}
.oc-goods .og-info {
  position: relative;
  width: 514rpx;
  padding: 2rpx 0 2rpx 24rpx;
}
.oc-goods .og-info .ogi-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.oc-goods .og-info .ogi-info {
  margin-top: 10rpx;
  color: #979797;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.oc-goods .og-info .ogi-price {
  display: flex;
  position: absolute;
  bottom: 0;
  left: 24rpx;
  right: 0;
  justify-content: space-between;
}
.ol-state {
  color: #2caef8;
}
page {
  height: 100%;
  background-color: #f1f1f1;
}
.order-list-main {
  height: 100%;
}
.order-list-main .olm-header {
  display: flex;
  position: fixed;
  top: 0;
  z-index: 2;
  width: 750rpx;
  height: 70rpx;
  margin-bottom: 14rpx;
  background-color: #fff;
}
.order-list-main .olm-header button {
  flex: 1;
  background-color: transparent;
  font-size: 28rpx;
}
.order-list-main .olm-header button:after {
  border: 0;
}
.order-list-main .olm-header button.active {
  color: #2caef8;
}
.order-list-main .olm-header::after {
  content: ' ';
  position: absolute;
  bottom: 0;
  height: 2rpx;
  background-color: #2caef8;
  transition: transform 0.3s;
}
.order-list-main .olm-header.type1::after {
  transform: translateX(65rpx);
  width: 60rpx;
}
.order-list-main .olm-header.type2::after {
  transform: translateX(235rpx);
  width: 88rpx;
}
.order-list-main .olm-header.type3::after {
  transform: translateX(426rpx);
  width: 88rpx;
}
.order-list-main .olm-header.type4::after {
  transform: translateX(616rpx);
  width: 88rpx;
}
.order-list-main .ol-es {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.order-list-main .ol-es image {
  width: 369rpx;
  height: 344rpx;
  margin-top: -200rpx;
}
.order-list-main .olm-list {
  position: relative;
  width: 750rpx;
  padding-top: 84rpx;
}
.order-list-main .olm-list .olml-unit {
  position: relative;
  width: 750rpx;
  left: 0;
}
.order-list-main .olm-list .olml-unit.olml-all {
  transform: translateX(0);
}
.order-list-main .olm-list .olml-unit.olml-penddingPay {
  transform: translateX(750rpx);
}
.order-list-main .olm-list .olml-unit.olml-penddingSend {
  transform: translateX(1500rpx);
}
.order-list-main .olm-list .olml-unit.olml-penddingReceive {
  transform: translateX(2250rpx);
}
.order-list-main .olm-list .olml-unit .olml-single {
  margin-bottom: 14rpx;
  background-color: #fff;
}
.order-list-main .olm-list .olml-unit .olml-single .olmls-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  padding: 0 24rpx;
}
.order-list-main .olm-list .olml-unit .olml-single .olmls-footer .lomlsf-price {
  flex: 1;
  color: #2caef8;
}
.order-list-main .olm-list .olml-unit .olml-single .olmls-footer .lomlsf-btns {
  display: flex;
  flex: 2;
  justify-content: flex-end;
}
.order-list-main .olm-list .olml-unit .olml-single .olmls-footer .lomlsf-btns button {
  background-color: transparent;
  width: 146rpx;
  height: 58rpx;
  padding: 0;
  margin: 0 0 0 28rpx;
  font-size: 24rpx;
  line-height: 58rpx;
  border: 1rpx solid #333;
  border-radius: 6rpx;
}
.order-list-main .olm-list .olml-unit .olml-single .olmls-footer .lomlsf-btns button:after {
  border: 0;
}
.order-list-main .olm-list .olml-unit .olml-single .olmls-footer .lomlsf-btns button.default-color {
  border: 0;
  color: #fff;
  background-color: #2caef8;
}
